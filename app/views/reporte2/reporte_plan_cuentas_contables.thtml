function mascara3($cod,$tipo){
	$opc = strlen($cod);
	if($tipo==1){
		switch ($opc) {
			case 1:	$cod = '000'.$cod;	break;
			case 2:	$cod = '00'.$cod;	break;
			case 3:	$cod = '0'.$cod;	break;
			default: break;
		}
	}else{
		switch ($opc) {
			case 1:	$cod = '00'.$cod;	break;
			case 2:	$cod = '0'.$cod;	break;
			case 3:	$cod = $cod;		break;
			default: break;
		}
	}
	return $cod;
}

